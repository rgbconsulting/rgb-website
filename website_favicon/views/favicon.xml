<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="website_favicon_layout" inherit_id="website.layout"
                  name="website_favicon layout">
            <xpath expr="//head//title" position="after">
                <link rel="shortcut icon" href="/favicon.ico"
                      type="image/x-icon"/>
            </xpath>
        </template>

    </data>
</openerp>